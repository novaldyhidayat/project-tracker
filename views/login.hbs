<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - Task Management</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
</head>
<body class="bg-gradient-to-br from-[#6D94C5] to-[#CBDCEB] min-h-screen flex items-center justify-center p-4">
<div class="w-full max-w-md bg-white rounded-xl shadow-2xl overflow-hidden fade-in">
  <div class="p-8">
    <div class="text-center mb-8">
      <div class="w-20 h-20 bg-[#6D94C5] rounded-full flex items-center justify-center mx-auto mb-4">
        <i class="fas fa-tasks text-white text-3xl"></i>
      </div>
      <h1 class="text-3xl font-bold text-gray-800">Welcome Back</h1>
      <p class="text-gray-600 mt-2">Sign in to your account to continue</p>
    </div>

    {{#if error}}
    <div class="mb-6 p-4 bg-red-50 border-l-4 border-red-500 text-red-700 rounded">
      <p>{{error}}</p>
    </div>
    {{/if}}

    <form id="loginForm" class="space-y-6">
        <div class="form-group">
        <label for="email" class="form-label">Email Address</label>
        <div class="flex">
          <div class="flex items-center justify-center px-3 bg-gray-100 border border-r-0 border-gray-300 rounded-l-lg">
            <i class="fas fa-envelope text-gray-400"></i>
          </div>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="form-control rounded-l-none"
            placeholder="you@example.com"
          >
        </div>
      </div>

      <div class="form-group">
        <div class="flex items-center justify-between mb-2">
          <label for="password" class="form-label">Password</label>
          <a href="/forgot-password" class="text-sm text-[#6D94C5] hover:underline">
            Forgot password?
          </a>
        </div>
        <div class="flex">
          <div class="flex items-center justify-center px-3 bg-gray-100 border border-r-0 border-gray-300 rounded-l-lg">
            <i class="fas fa-lock text-gray-400"></i>
          </div>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="form-control rounded-l-none"
            placeholder="••••••••"
          >
        </div>
      </div>

      <div class="flex items-center">
        <input
          type="checkbox"
          id="remember"
          name="remember"
          class="h-4 w-4 text-[#6D94C5] focus:ring-[#6D94C5] border-gray-300 rounded"
        >
        <label for="remember" class="ml-2 block text-sm text-gray-700">
          Remember me
        </label>
      </div>

      <button type="submit" class="w-full btn btn-primary py-3 px-4 text-white font-medium rounded-lg">
        Sign In
      </button>
    </form>
  </div>

  <div class="bg-gray-50 px-8 py-4 text-center">
    <p class="text-xs text-gray-500">
      By continuing, you agree to our
      <a href="#" class="text-[#6D94C5] hover:underline">Terms of Service</a> and
      <a href="#" class="text-[#6D94C5] hover:underline">Privacy Policy</a>.
    </p>
  </div>
</div>

<style>
  .form-control {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-left: none;
    margin: 0;
  }

  .form-control:focus {
    border-color: #6D94C5;
    box-shadow: 0 0 0 3px rgba(109, 148, 197, 0.2);
    z-index: 1;
  }

  .form-control.rounded-l-none {
    border-top-left-radius: 0 !important;
    border-bottom-left-radius: 0 !important;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const form = document.getElementById('loginForm');
  const emailInput = document.getElementById('email');
  const passwordInput = document.getElementById('password');
  const rememberCheckbox = document.getElementById('remember');
  const loginBtn = form.querySelector('button[type="submit"]');

  gsap.from('.fade-in', {
    opacity: 0,
    y: 20,
    duration: 0.8,
    stagger: 0.1
  });

  const inputs = [emailInput, passwordInput];
  inputs.forEach(input => {
    input.addEventListener('focus', () => {
      const container = input.closest('.flex');
      gsap.to(container, {
        duration: 0.2,
        boxShadow: '0 0 0 3px rgba(109, 148, 197, 0.2)'
      });
      input.style.borderColor = '#6D94C5';
    });

    input.addEventListener('blur', () => {
      const container = input.closest('.flex');
      gsap.to(container, {
        duration: 0.2,
        boxShadow: 'none'
      });
      input.style.borderColor = '';
    });
  });

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    loginBtn.disabled = true;
    loginBtn.innerHTML = `
      <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline-block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Signing in...
    `;

    try {
      const response = await fetch('/auth/login', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          email: emailInput.value,
          password: passwordInput.value,
          remember: rememberCheckbox.checked
        })
      });

      if (response.ok) {
        const result = await response.json();
        localStorage.setItem('access_token', result.access_token);
        if (result.refresh_token) {
          localStorage.setItem('refresh_token', result.refresh_token);
        }

        gsap.to(form, {
          opacity: 0,
          y: -20,
          duration: 0.3,
          onComplete: () => {
            window.location.href = '/dashboard';
          }
        });
      } else {
        const error = await response.json();
        showError(error.message || 'Invalid email or password');
      }
    } catch (err) {
      console.error('Login error:', err);
      showError('An error occurred. Please try again.');
    } finally {
      loginBtn.disabled = false;
      loginBtn.innerHTML = 'Sign In';
    }
  });

  function showError(message) {
    let errorDiv = document.getElementById('error-message');
    if (!errorDiv) {
      errorDiv = document.createElement('div');
      errorDiv.id = 'error-message';
      errorDiv.className = 'mb-6 p-4 bg-red-50 border-l-4 border-red-500 text-red-700 rounded';
      form.prepend(errorDiv);
    }

    errorDiv.textContent = message;

    gsap.fromTo(errorDiv,
      { opacity: 0, y: -10 },
      {
        opacity: 1,
        y: 0,
        duration: 0.3,
        ease: 'power2.out'
      }
    );

    errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
  }
});
</script>
</body>
</html>
